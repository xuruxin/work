
page {
	background: #f5f5f5;
}
.box1 {
	-webkit-box-shadow: 0 0 30rpx #ddd;
	        box-shadow: 0 0 30rpx #ddd;
	height: 200rpx;
	width: 690rpx;
	border-radius: 20rpx;
	margin-top: 40rpx;
	margin-left: 30rpx;
}
.box1 .goodspic {
	width: 150rpx;
	height: 150rpx;
	border-radius: 15rpx;
	margin: 25rpx;
}
.box1 .star {
	width: 60rpx !important;
	height: 60rpx !important;
}
.box1 .stars {
	margin-top: 10rpx;
}
.box1 .goodsmsg {
	position: absolute;
	font-size: 35rpx;
	font-weight: 700;
	margin-top: 30rpx;
	margin-left: 200rpx;
}
.box1 .title {
	width: 470rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.box2 {
	font-size: 30rpx;
	width: 690rpx;
	margin-left: 30rpx;
	margin-top: 40rpx;
	height: 300rpx;
}
.box2 textarea {
	width: 100%;
}
.box2 .tips {
	position: absolute;
	right: 30rpx;
	margin-top: 250rpx;
	font-size: 26rpx;
	color: #999;
}
.pic_box {
	margin: 20rpx 0;
	margin-left: 30rpx;
}
.pic_box image {
	width: 220rpx;
	height: 220rpx;
	margin-right: 10rpx;
}
.close_pic {
	width: 30rpx !important;
	height: 30rpx !important;
	position: absolute;
	margin-left: 190rpx;
}
.niming {
	height: 100rpx;
	line-height: 100rpx;
}
.niming view {
	margin-left: 30rpx;
	font-size: 30rpx;
}
.niming switch {
	position: absolute;
	right: 30rpx;
}
.white {
	background: #fff;
}
.bottom {
	height: 110rpx;
	width: 100%;
	position: fixed;
	bottom: 0;
	background: #fff;
}
.bottom button {
	width: 90%;
	height: 70rpx;
	line-height: 70rpx;
	border-radius: 0;
	background: -webkit-linear-gradient(left, #e06938, #de4042);
	color: #fff;
	font-size: 30rpx;
	margin-top: 20rpx;
}
.bottom button::after {
	border: none;
}
.del_icon {
	z-index: 10;
}


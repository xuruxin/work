
page {
	background: #FFFFFF;
}
movable-area {
	height: 100rpx;
	width: 690rpx;
	margin-left: 30rpx;
	margin-top: 30rpx;
	border-radius: 15rpx;
	-webkit-box-shadow: 0 0 20rpx #ddd;
	        box-shadow: 0 0 20rpx #ddd;
}
movable-area view {
	float: left;
	width: 50%;
	text-align: center;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 30rpx;
}
movable-area movable-view {
	height: 2px;
	width: 10px;
	background: #f2223b;
	margin-top: 97rpx;
}
.box2 {
	width: 100%;
	background: #fff;
	font-size: 30rpx;
}
.active {
	color: #FD5450;
	font-size: 33rpx;
}
.pj_box {
	width: 92%;
	padding: 0 4%;
	margin-top: 20rpx;
	padding-top: 40rpx;
	border-bottom: 1px solid #eee;
}
.headimg {
	width: 80rpx;
	height: 80rpx;
	position: absolute;
	border-radius: 50%;
}
.name {
	margin-left: 100rpx;
	height: 80rpx;
	line-height: 80rpx;
	width: 250rpx;
	overflow: hidden;
	-o-text-overflow: ellipsis;
	   text-overflow: ellipsis;
	white-space: nowrap;
}
.star {
	width: 45rpx;
	height: 45rpx;
}
.pj_msg {
	margin: 20rpx 0;
	overflow: hidden;
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 4;
}
.stars {
	margin-top: 10rpx;
	position: absolute;
	right: 2.5%;
}
.pj_img {
	width: 210rpx;
	height: 190rpx;
	margin-right: 20rpx;
}
.pj_time {
	position: absolute;
	right: 4%;
	color: #999;
	height: 90rpx;
	line-height: 90rpx;
}
.ggsj {
	height: 90rpx;
	line-height: 90rpx;
	font-size: 25rpx;
	color: #999;
}
.norecord {
	width: 100%;
	text-align: center;
	color: #777;
	font-size: 25rpx;
}
.norecord image {
	width: 250rpx;
	height: 250rpx;
	margin-top: 100rpx;
}

